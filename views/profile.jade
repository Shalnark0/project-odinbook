doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Profile
    style.
      .container-for-profilepic {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 130px;
        width: 130px;
        border: 2px solid black;
        position: relative;
      }
      .container-for-profilepic img {
        max-height: 100%;
        max-width: 100%;
      }
      .post-container {
        width: 100px;
        word-wrap: break-word;
        border: 1px solid black;
        padding: 10px;
        margin-bottom: 10px;
      }
  body
    if user.isGuest
      h1 You are a guest
      p Log in to see profile details.
      a(href="/log-in") Log In
    else
      if user
        h1 Profile Page
        p Username: #{user.username}
  
        .container-for-profilepic
          if user.profilePic
            img(src=user.profilePic, alt="Profile Picture")
          else
            p No profile picture
  
        if currentUser && currentUser._id.toString() === user._id.toString()
          form#uploadForm(action="/upload-profile-pic", method="POST", enctype="multipart/form-data")
            input(type="hidden", name="userId", value=user._id) 
            input(type="file", name="profilePic", accept="image/*")
            button(type="submit") Change Profile picture
        
        p Followers: #{user.followers.length} 
        p Following: #{user.following.length} 
        
        h2 Posts by #{user.username}
        each post, i in posts
          .post-container
            p Post #{i+1}: #{post.text}
  
        if currentUser && currentUser._id.toString() === user._id.toString()
          a(href="/log-out") Log Out
        else
          form(action=`/follow/${user._id}`, method="POST")
            button(type="submit", onClick=`followUser('${user._id}')`) Follow
          a(href="/list-of-users") Back to User List
      else
        p User not found.
        a(href="/list-of-users") Back to User List
    script.
      async function followUser(userId) {
        try {
          const response = await fetch(`/follow/${userId}`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            }
          });
          if (response.ok) {
            // Handle success (e.g., reload the page or update the UI)
            location.reload();
          } else {
            const errorText = await response.text();
            console.error('Error following user:', errorText);
          }
        } catch (error) {
          console.error('Error following user:', error);
        }
      }
      document.addEventListener('DOMContentLoaded', function() {
        const followButton = document.querySelector('button[onClick="followUser"]');
        if (followButton) {
          followButton.addEventListener('click', function(event) {
            event.preventDefault();
            const userId = this.getAttribute('data-user-id');
            followUser(userId);
          });
        }
      });